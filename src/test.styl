@require 'index'

.test-button-text
	@extend $button-typography

.typography-overlay
	fixed top left
	width 100vw
	height 100vh

	.typography-overlay__h1
		height: fnAdjustLineHeight($h1.fontSize, 1.125) * $h1.fontSize

	.typography-overlay__h2
		height: fnAdjustLineHeight($h2.fontSize, 1.125) * $h2.fontSize

	.typography-overlay__h3
		height: fnAdjustLineHeight($h3.fontSize, 1.125) * $h3.fontSize

	.typography-overlay__h4
		height: fnAdjustLineHeight($h4.fontSize, 1.125) * $h4.fontSize

	.typography-overlay__h5
		height: fnAdjustLineHeight($h5.fontSize, 1.125) * $h5.fontSize

	.typography-overlay__h6
		height: fnAdjustLineHeight($h6.fontSize, 1.125) * $h6.fontSize

.typography-overlay > *
	box-sizing border-box
	border-bottom 1px solid red
